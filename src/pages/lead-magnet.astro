<script>
  class LeadMagnetManager {
    constructor() {
      this.currentStep = 1;
      this.formData = {};
      this.init();
    }

    init() {
      this.bindEvents();
      this.showStep(1);
    }

    bindEvents() {
      document.getElementById('btn-next-1')?.addEventListener('click', () => this.nextStep());
      document.getElementById('btn-next-2')?.addEventListener('click', () => this.nextStep());
      document.getElementById('btn-prev-2')?.addEventListener('click', () => this.prevStep());
      document.getElementById('btn-prev-3')?.addEventListener('click', () => this.prevStep());
      document.getElementById('lead-form')?.addEventListener('submit', (e) => this.handleSubmit(e));
    }

    showStep(step) {
      document.querySelectorAll('.step-content').forEach(el => el.classList.add('hidden'));
      document.getElementById(`step-${step}`)?.classList.remove('hidden');
      this.updateStepDisplay();
    }

    updateStepDisplay() {
      const stepTitles = ['üë§ Vos informations', 'üè¢ Votre contexte', 'üéØ Votre projet'];
      const stepDescriptions = ['Qui √™tes-vous ?', 'Votre environnement', 'Vos objectifs'];
      
      document.getElementById('current-step').textContent = this.currentStep.toString();
      document.getElementById('progress-percent').textContent = Math.round((this.currentStep / 3) * 100).toString();
      document.getElementById('progress-bar').style.width = `${(this.currentStep / 3) * 100}%`;
      document.getElementById('step-title').textContent = stepTitles[this.currentStep - 1];
      document.getElementById('step-description').textContent = stepDescriptions[this.currentStep - 1];
    }

    validateCurrentStep() {
      const currentStepElement = document.getElementById(`step-${this.currentStep}`);
      if (!currentStepElement) return false;

      const requiredFields = currentStepElement.querySelectorAll('[required]');
      for (let field of requiredFields) {
        if (!field.value.trim()) {
          field.focus();
          this.showFieldError(field);
          return false;
        }
      }
      return true;
    }

    showFieldError(field) {
      field.classList.add('ring-2', 'ring-red-500');
      setTimeout(() => {
        field.classList.remove('ring-2', 'ring-red-500');
      }, 3000);
    }

    saveCurrentStepData() {
      const currentStepElement = document.getElementById(`step-${this.currentStep}`);
      if (!currentStepElement) return;

      const inputs = currentStepElement.querySelectorAll('input, select, textarea');
      inputs.forEach(input => {
        this.formData[input.name] = input.value;
      });
    }

    nextStep() {
      if (!this.validateCurrentStep()) return;
      
      this.saveCurrentStepData();
      if (this.currentStep < 3) {
        this.currentStep++;
        this.showStep(this.currentStep);
      }
    }

    prevStep() {
      if (this.currentStep > 1) {
        this.currentStep--;
        this.showStep(this.currentStep);
      }
    }

    handleSubmit(e) {
      e.preventDefault();
      console.log('Form submitted!');
      
      if (!this.validateCurrentStep()) {
        console.log('Validation failed');
        return;
      }
      
      console.log('Validation passed');
      this.saveCurrentStepData();
      console.log('Form data:', this.formData);
      this.generateCanvas();
    }

    generateCanvas() {
      console.log('Generating canvas...');
      
      const formContainer = document.getElementById('lead-form-container');
      const canvasDisplay = document.getElementById('canvas-display');
      
      if (formContainer) {
        formContainer.style.display = 'none';
      }
      
      if (canvasDisplay) {
        canvasDisplay.classList.remove('hidden');
      }
      
      // Populate canvas data
      const userName = this.formData.name ? this.formData.name.split(' ')[0] : 'Test';
      const userSector = this.formData.sector || 'Votre secteur';
      
      document.getElementById('user-name').textContent = userName;
      document.getElementById('user-sector').textContent = userSector;
      
      // Show header
      document.getElementById('personalized-header-container')?.classList.remove('hidden');
      
      // Generate canvas sections
      this.generateCanvasSections();
      this.generateNextSteps();
      
      if (canvasDisplay) {
        canvasDisplay.scrollIntoView({ behavior: 'smooth' });
      }
    }

    generateCanvasSections() {
      const canvasSections = document.getElementById('canvas-sections');
      if (!canvasSections) return;

      canvasSections.innerHTML = this.getCanvasHTML();
      
      // Initialize AI section after a short delay
      setTimeout(() => this.initializeAISection(), 2000);
    }

    generateNextSteps() {
      const nextStepsContainer = document.getElementById('next-steps-container');
      if (!nextStepsContainer) return;

      nextStepsContainer.innerHTML = `
        <button class="w-full text-left p-4 bg-white/10 hover:bg-white/20 rounded-lg transition-colors">
          <div class="flex items-center justify-between">
            <div class="flex items-center">
              <span class="mr-3 text-xl">üìû</span>
              <span class="font-medium">√âvaluation confidentiel 30 min</span>
            </div>
            <span class="opacity-70">‚Üí</span>
          </div>
          <div class="text-sm opacity-80 mt-1 ml-8">Inclus dans l'audit complet</div>
        </button>
        
        <button class="w-full text-left p-4 bg-white/10 hover:bg-white/20 rounded-lg transition-colors">
          <div class="flex items-center justify-between">
            <div class="flex items-center">
              <span class="mr-3 text-xl">üíº</span>
              <span class="font-medium">Atelier de cadrage personnalis√©</span>
            </div>
