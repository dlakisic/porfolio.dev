---
export interface Props {
  title: string;
  icon: string;
  badge?: string;
  borderColor: string;
  content: string;
  isFullWidth?: boolean;
}

const { title, icon, badge, borderColor, content, isFullWidth = false } = Astro.props;
---

<div class={`canvas-card border-l-4 ${borderColor} ${isFullWidth ? 'md:col-span-2 lg:col-span-3' : ''}`}>
  <div class="flex items-center justify-between mb-3">
    <div class="flex items-center">
      <span class="text-xl mr-2" set:html={icon}></span>
      <h3 class="font-semibold text-sm uppercase tracking-wide text-blue-600 dark:text-blue-400">{title}</h3>
    </div>
    {badge && (
      <span class="bg-blue-100 dark:bg-blue-900 text-blue-800 dark:text-blue-200 px-2 py-1 rounded text-xs font-medium">
        {badge}
      </span>
    )}
  </div>
  <div class="text-sm" set:html={content}>
  </div>
</div>

<style>
  .canvas-card {
    @apply bg-white dark:bg-gray-900 
           border border-gray-200 dark:border-gray-700 
           rounded-lg p-4 shadow-lg 
           hover:shadow-xl dark:hover:shadow-2xl 
           transition-shadow duration-300;
  }
</style> 