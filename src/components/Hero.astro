---
import { useTranslations, getCurrentLanguage } from '@/i18n/utils'

const currentLang = getCurrentLanguage()
const t = useTranslations(currentLang)

const personalImageAlt = "Dino Lakisic"
import Badge from "@/components/Badge.astro"
import LinkedInIcon from "@/components/icons/LinkedIn.astro"
import MailIcon from "@/components/icons/Mail.astro"
import GitHub from "@/components/icons/GitHub.astro"
import LinkButton from "@/components/LinkButton.astro"
import Calendar from "@/components/icons/Calendar.astro"
---

<div class="max-w-xl">
  <div class="flex gap-4 mb-4">
    <img
      class="rounded-full shadow-lg size-16"
      src="/Dino.webp"
      alt={personalImageAlt}
    />
    <a
      href="https://linkedin.com/in/dino-lakisic"
      target="_blank"
      rel="noopener"
      class="flex items-center transition md:justify-center md:hover:scale-105"
    >
      <Badge variant="success" animated><span data-i18n="hero.badge">{t("hero.badge")}</span></Badge>
    </a>
  </div>
  <h1
    class="text-4xl font-bold tracking-tight text-gray-800 sm:text-5xl dark:text-white"
    data-i18n="hero.title"
  >
    {t("hero.title")}
  </h1>
  <p
    class="mt-6 text-xl text-gray-800 dark:[&>strong]:text-primary-200 [&>strong]:text-primary-500 [&>strong]:font-semibold dark:text-gray-300"
  >
    <strong data-i18n="hero.role">{t("hero.role")}</strong> <span data-i18n="hero.location">{t("hero.location")}</span>. <span data-i18n="hero.description">{t("hero.description")}</span>
  </p>
  <nav class="flex flex-wrap gap-4 mt-8">
    <LinkButton href="https://linkedin.com/in/dino-lakisic">
      <LinkedInIcon class="size-6" />
      LinkedIn
    </LinkButton>
    <LinkButton href="https://github.com/dlakisic">
      <GitHub class="size-6" />
      Github
    </LinkButton>
    <LinkButton href="mailto:dino@lakisic.dev">
      <MailIcon class="size-6" />
      <span data-i18n="nav.contact">{t("nav.contact")}</span>
    </LinkButton>
    <LinkButton href="mailto:dino@lakisic.dev">
      <Calendar class="size-6" />
      <span data-i18n="nav.calendar">{t("nav.calendar")}</span>
    </LinkButton>
  </nav>
</div>
