---
interface Props {
	title: string;
	body: string;
	href: string;
	variant?: 'default' | 'gradient'
}

const { href, title, body, variant = 'default' } = Astro.props;
---

<li class={`
  list-none flex p-1 rounded-lg transition-all duration-300 ease-out
  ${variant === 'gradient' 
    ? 'bg-gray-800 dark:bg-gray-900 border border-gray-700/50 hover:border-yellow-500/50' 
    : 'bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 hover:border-yellow-500 dark:hover:border-yellow-400'
  }
  hover:shadow-lg hover:scale-[1.02] group
`}>
	<a 
		href={href}
		class={`
			w-full no-underline leading-relaxed p-6 rounded-md transition-colors
			${variant === 'gradient'
				? 'text-white bg-gray-800 dark:bg-gray-900 opacity-80 hover:opacity-100'
				: 'text-gray-900 dark:text-white bg-white dark:bg-gray-800'
			}
		`}
	>
		<h2 class="m-0 text-xl font-semibold transition-colors group-hover:text-yellow-500 dark:group-hover:text-yellow-400 flex items-center gap-2">
			{title}
			<span class="text-lg transition-transform group-hover:translate-x-1">&rarr;</span>
		</h2>
		<p class="mt-2 mb-0 text-gray-600 dark:text-gray-300">
			{body}
		</p>
	</a>
</li>
